@startuml
class User {
  - id : int
  - name : string
  - email : string
  - password : string
  - role : enum
  - reputation_score : int
  - is_banned : boolean
  --
  + signIn()
  + login()
  + logOut()
}

class Member {
  --
  + joinCollocation()
  + checkMembersList()
  + addExpense()
  + addPayment()
  + checkSold()
  + checkExpensesList()
  + quitCollocation()
}

class Owner {
  --
  + addCollocation()
  + cancelCollocation()
  + sendInvitation()
  + addMember()
  + deleteMember()
}

class Expense {
  - id : int
  - colocation_id : int
  - payer_id : int
  - category_id : int
  - title : string
  - amount : double
  - expense_date : datetime
  --
  + method(type): type
}

class Collocation {
  - id : int
  - name : string
  - owner_id : int
  - status : enum
  - cancelled_at : datetime
  --
  + method(type): type
}

class Invitation {
  - id : int
  - sender_id : int
  - receiver_id : int
  - collocation_id : int
  - token : string
  - status : enum
  - created_at : datetime
  --
  + createInvitation()
}

class Categorie {
  + field: type
  --
  + method(type): type
}

class Payment {
  + field: type
  --
  + method(type): type
}

